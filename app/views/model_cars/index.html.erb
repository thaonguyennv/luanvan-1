<h1>Model Cars</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Noseat</th>
      <th>Factoryprice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @model_cars.each do |model_car| %>
      <tr>
        <td><%= model_car.model %></td>
        <td><%= model_car.noSeat %></td>
        <td><%= model_car.factoryPrice %></td>
        <td><%= link_to 'Show', model_car %></td>
        <td><%= link_to 'Edit', edit_model_car_path(model_car) %></td>
        <td><%= link_to 'Destroy', model_car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

